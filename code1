somaidade = 0
maisve = 0
contsex = 0
nomeve = ""
muie = 0
for i in range(1, 5):
    print(f"-----{i}° Pessoa------" "\n")
    nome = str(input("Qual é o nome?: "))
    idade = int(input("Qual é a idade?: "))
    sexo = str(input("Qual é o sexo[M/F]: "))
    somaidade += idade
    if i == 1:
        maisve = idade
        if sexo in "Mm":
            nomeve = nome
    else:
        if idade > maisve:
            maisve = idade
            if sexo in "Mm":
                nomeve = nome
    if sexo in "Ff" and idade < 20:
        muie += 1
mediaidade = somaidade/4
print(f"A média de idade do grupo é de {mediaidade} anos.")
print(f"O homem mais velho se chama {nomeve} e tem {maisve} anos.")
print(f"Ao todo são {muie} mulheres com menos de 20 anos.")
